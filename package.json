{
  "name": "spiff",
  "version": "1.1.2",
  "description": "Promise-aware file-system adapter and transmorgrifier.",
  "main": "lib/spiff.js",
  "scripts": {
    "coveralls": "nyc report -r text-lcov | coveralls",
    "build": "rimraf lib && babel src --out-dir lib",
    "prepublish": "npm run build",
    "pretest": "xo '{src,test}/**/*.js'",
    "test": "nyc -r lcov -r text ava -v",
    "watch": "chokidar '{src,test}/**' -c 'npm test'"
  },
  "repository": "shannonmoeller/spiff",
  "keywords": [],
  "author": "Shannon Moeller <me@shannonmoeller.com> (http://shannonmoeller.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/shannonmoeller/spiff/issues"
  },
  "homepage": "https://github.com/shannonmoeller/spiff",
  "dependencies": {
    "fs-promise": "^0.5.0",
    "glob-parent": "^2.0.0",
    "globby": "^4.0.0",
    "list-promise": "^1.1.1",
    "vinyl": "^1.1.1"
  },
  "devDependencies": {
    "ava": "^0.13.0",
    "babel-cli": "^6.6.5",
    "babel-plugin-async-to-promises": "^1.0.4",
    "babel-plugin-transform-object-assign": "^6.5.0",
    "babel-plugin-transform-object-rest-spread": "^6.6.5",
    "babel-polyfill": "^6.7.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-register": "^6.7.2",
    "chokidar-cli": "^1.2.0",
    "coveralls": "^2.11.6",
    "nyc": "^6.0.0",
    "rimraf": "^2.5.2",
    "xo": "^0.13.0"
  },
  "engines": {
    "node": ">= 0.12"
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "async-to-promises",
      "transform-object-assign",
      "transform-object-rest-spread"
    ]
  },
  "nyc": {
    "require": [
      "babel-polyfill",
      "babel-register"
    ]
  },
  "xo": {
    "rules": {
      "brace-style": [
        2,
        "stroustrup"
      ],
      "eqeqeq": [
        2,
        "allow-null"
      ],
      "no-eq-null": 0,
      "object-curly-spacing": [
        2,
        "always"
      ],
      "operator-linebreak": [
        2,
        "before"
      ],
      "babel/object-curly-spacing": [
        2,
        "always"
      ]
    }
  }
}
